<h1 class="text-3xl font-bold text-center my-8">All Products</h1>
<ul class="space-y-4 max-w-3xl mx-auto">
  <% @products.each do |product| %>
    <%= link_to product_path(product), class: "block" do %>
      <div class="bg-white shadow-md rounded p-4 hover:bg-gray-100 transition duration-200 flex">
        <p class="text-xl font-medium text-blue-500 hover:underline"><%= product.name %></p>
        <p class="text-lg text-gray-600 ml-auto"><%= number_to_currency(product.price, :unit => "à¸¿") %></p>
      </div>
    <% end %>
  <% end %>
</ul>
