<div class="container mt-5">
  <div class="rounded p-4">
      <%= form_with(model: @order, class: "needs-validation", novalidate: true) do |form| %>
        <div class="flex gap-2">
          <div class="mb-4">
            <%= form.label :name, "Full Name", class: "form-label fw-bold" %> <br/>
            <%= form.text_field :name, class: "form-control border-1 rounded-sm p-2", placeholder: "Enter your full name", required: true %>
          </div>
          <div class="mb-4">
            <%= form.label :phone_number, "Phone Number", class: "form-label fw-bold" %> <br/>
            <%= form.telephone_field :phone_number, class: "form-control border-1 rounded-sm p-2", placeholder: "Enter your phone number", required: true %>
          </div>
        </div>

        <div class="d-grid gap-2">
          <%= form.submit "ยืนยันคำสั่งซื้อ", class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
      </div>
      <% end %>

    
    </div>
</div>