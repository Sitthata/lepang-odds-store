<h1 class="text-3xl font-bold text-center my-8">All Products</h1>
<ul class="space-y-4 max-w-3xl mx-auto pb-15">
  <% @products.each_with_index do |product, i| %>
    <%= link_to product_path(product), class: "block" do %>
      <div class="bg-white shadow-md rounded p-4 hover:bg-gray-100 transition duration-200 flex">
        <p class="text-xl font-medium text-blue-500 hover:underline"><%= "#{i + 1}. #{product.name}" %></p>
        <p class="text-lg text-gray-600 ml-auto"><%= number_to_currency(product.price, :unit => "à¸¿", format: "%n %u") %></p>
      </div>
    <% end %>
  <% end %>
</ul>
